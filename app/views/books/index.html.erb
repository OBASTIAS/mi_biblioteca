<p id="notice"><%= notice %></p>

<h1 class="text-center">Books</h1>

<div class="row">
  <div class="column">
    <%= search_form_for @q do |f| %>
      <div class="form-group">
        <%= f.label :state_eq, "Estado", class:"mb-1 text-center " %>
        <%= f.select :state_eq, options_for_select(Book.states, @q.state_eq ),{},{class:"form-control"}%>
      </div>
      <%= f.submit"Search", class:"btn btn-info" %>
      <%=link_to 'New Book', new_book_path,class:"btn btn-danger" %>
    <%end%>
  </div>
</div>

<br>


<table class="mt-5 container">
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %></th>      
      <th>Author</th>
      <th>Status</th>
      <th>Loan Date</th>
      <th>Return Date</th>

      <th colspan="3"></th>
    </tr>
  </thead>
<%= paginate @books %>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.state %></td>
        <td><%= book.loan_date %></td>
        <td><%= book.return_date %></td>

        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




